@using Blog.Services
@using Blog.Services.Interfaces
@model Blog.Models.Category
@inject IImageService ImageService
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageData" />
            <input type="hidden" asp-for="ImageType" />
            <div class="square-img-container">
                @if (Model.ImageData != null)
                {
                    <img class="img-fluid img-thumbnail" style="width:100px; height:80px" src="@ImageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType!)" id="imageData">
                }
                else
                {
                    <img class="img-fluid img-thumbnail" style="width:100px; height:80px" src="/img/DefaultBlogImage.png" id="imageData">
                }
            </div>
            <div>
                <label asp-for="CategoryImg" class="control-label"></label>
                <input type="file" asp-for="CategoryImg" class="form-control" accept=".png,.jpg,.jpeg,.gif"
                       onchange="document.getElementById('imageData').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="CategoryImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
