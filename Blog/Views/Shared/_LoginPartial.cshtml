@using Microsoft.AspNetCore.Identity
@*Inject our new BlogUser*@
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

@{
    BlogUser blogUser = await UserManager.GetUserAsync(User);
}


@if (SignInManager.IsSignedIn(User))
{
    <li class="">
        <a class="hover-flip-item-wrapper" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @blogUser.FirstName!</a>
    </li>
    <li class="">
        <form id="logout" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("AuthorPage", "Home", new { area = "" })">
            <a href="javascript:document.getElementById('logout').submit();" class="hover-flip-item-wrapper">Logout</a>
        </form>
    </li>
}
else
{
    <li>
        <a class="hover-flip-item-wrapper" asp-area="Identity" asp-page="/Account/Login" title="Manage">

                Login

        </a>
    </li>
}

